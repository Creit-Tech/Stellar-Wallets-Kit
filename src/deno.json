{
  "name": "@creit-tech/stellar-wallets-kit",
  "version": "2.0.0-beta.5",
  "license": "MIT",
  "tasks": {
    "build-npm": "deno run -A build_npm.ts",
    "lint": "deno lint components/* mod.ts build_npm.ts sdk/* state/* types/* --fix",
    "fmt": "deno fmt components/* mod.ts build_npm.ts sdk/* state/* types/*"
  },
  "imports": {
    "@albedo-link/intent": "npm:@albedo-link/intent@0.12.0",
    "@creit.tech/xbull-wallet-connect": "npm:@creit.tech/xbull-wallet-connect@0.4.0",
    "@deno/dnt": "jsr:@deno/dnt@0.42.3",
    "@hot-wallet/sdk": "npm:@hot-wallet/sdk@1.0.11",
    "@ledgerhq/hw-app-str": "npm:@ledgerhq/hw-app-str@7.2.8",
    "@ledgerhq/hw-transport": "npm:@ledgerhq/hw-transport@6.31.12",
    "@ledgerhq/hw-transport-webusb": "npm:@ledgerhq/hw-transport-webusb@6.29.12",
    "@lobstrco/signer-extension-api": "npm:@lobstrco/signer-extension-api@2.0.0",
    "@preact/signals": "npm:@preact/signals@2.3.2",
    "@reown/appkit": "npm:@reown/appkit@1.8.12",
    "@std/bytes": "jsr:@std/bytes@1.0.6",
    "@std/encoding": "jsr:@std/encoding@1.0.10",
    "@stellar/freighter-api": "npm:@stellar/freighter-api@5.0.0",
    "@stellar/stellar-base": "npm:@stellar/stellar-base@14.0.1",
    "@trezor/connect-plugin-stellar": "npm:@trezor/connect-plugin-stellar@9.2.3",
    "@trezor/connect-web": "npm:@trezor/connect-web@9.6.4",
    "@twind/core": "npm:@twind/core@1.1.3",
    "@twind/preset-autoprefix": "npm:@twind/preset-autoprefix@1.0.7",
    "@twind/preset-tailwind": "npm:@twind/preset-tailwind@1.1.4",
    "@walletconnect/sign-client": "npm:@walletconnect/sign-client@2.23.0",
    "@walletconnect/types": "npm:@walletconnect/types@2.23.0",
    "htm": "npm:htm@3.1.1",
    "preact": "npm:preact@10.27.2"
  },
  "exports": {
    ".": "./mod.ts",
    "./components": "./components/mod.ts",
    "./state": "./state/mod.ts",
    "./types": "./types/mod.ts",
    "./sdk": "./sdk/mod.ts",
    "./modules/albedo": "./sdk/modules/albedo.module.ts",
    "./modules/freighter": "./sdk/modules/freighter.module.ts",
    "./modules/hana": "./sdk/modules/hana.module.ts",
    "./modules/hotwallet": "./sdk/modules/hotwallet.module.ts",
    "./modules/klever": "./sdk/modules/klever.module.ts",
    "./modules/ledger": "./sdk/modules/ledger.module.ts",
    "./modules/lobstr": "./sdk/modules/lobstr.module.ts",
    "./modules/rabet": "./sdk/modules/rabet.module.ts",
    "./modules/trezor": "./sdk/modules/trezor.module.ts",
    "./modules/wallet-connect": "./sdk/modules/wallet-connect.module.ts",
    "./modules/xbull": "./sdk/modules/xbull.module.ts",
    "./modules/utils": "./sdk/modules/utils.ts"
  },
  "fmt": {
    "lineWidth": 120
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended",
        "jsr"
      ],
      "include": [
        "camelcase",
        "no-sync-fn-in-async-fn",
        "single-var-declarator"
      ],
      "exclude": [
        "no-explicit-any",
        "require-await"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "skipLibCheck": true
  }
}
